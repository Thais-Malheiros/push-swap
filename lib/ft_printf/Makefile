#!----------------------------------------------------------------------------#
#                                NAME                                         #
#!----------------------------------------------------------------------------#

NAME = ft_printf.a
.DEFAULT_GOAL := all
.PHONY: all clean fclean re
.SILENT:

#!----------------------------------------------------------------------------#
#                              COLORS                                         #
#!----------------------------------------------------------------------------#

CYAN = \033[0;36m
GREEN = \033[0;32m
PURPLE = \033[0;35m
RED = \033[31m
WHITE = \033[37m
YELLOW = \033[33m
RESET = \033[0m

#!----------------------------------------------------------------------------#
#                                PATH                                         #
#!----------------------------------------------------------------------------#

INCLUDE_PATH = ./includes/
SRCS_PATH = src/
BUILD_DIR = obj/

#!----------------------------------------------------------------------------#
#                                FILES                                        #
#!----------------------------------------------------------------------------#

SRCS = $(addprefix $(SRCS_PATH), \
			ft_printf.c \
			ft_putchar_fd.c \
			ft_putnbr_fd.c \
			ft_putnbr_unsg_fd.c \
			ft_putstr_fd.c \
			ft_puthexa_low_fd.c \
			ft_puthexa_up_fd.c \
			ft_putptr_fd.c)
OBJS = $(SRCS:%.c=$(BUILD_DIR)%.o)
DEPS = $(OBJS:.o=.d)

#!----------------------------------------------------------------------------#
#                             COMMANDS                                        #
#!----------------------------------------------------------------------------#

MKDIR =mkdir -p
RM = rm -rf
SLEEP = sleep 0.1
CC = cc
AR = ar -rcs

#!----------------------------------------------------------------------------#
#                                  FLAGS                                      #
#!----------------------------------------------------------------------------#

CFLAGS = -Wall -Werror -Wextra
DFLAGS = -Wall -Werror -Wextra -g3 -fsanitize=address
LDLIBS = -lft -ldl -lglfw -pthread

#!----------------------------------------------------------------------------#
#                             COMPILATION                                     #
#!----------------------------------------------------------------------------#

COMP_OBJ = $(CC) $(CFLAGS) -c $< -o $@
COMP_LIB = $(AR) $(NAME) $(OBJS)

#!----------------------------------------------------------------------------#
#                             FUNCTIONS                                       #
#!----------------------------------------------------------------------------#

define create_dir
		$(MKDIR) $(dir $@)
endef

define comp_objs
		$(COMP_OBJ)
endef

define comp_lib
		$(COMP_LIB)
endef

#!----------------------------------------------------------------------------#
#                              TARGETS                                        #
#!----------------------------------------------------------------------------#

all: $(NAME)

$(BUILD_DIR)%.o: %.c
		$(call create_dir)
		$(call comp_objs)

$(NAME): $(OBJS)
		$(call comp_lib)

clean:
		$(RM) $(BUILD_DIR)

fclean: clean
		$(RM) $(NAME)

re: fclean all

-include $(DEPS)

